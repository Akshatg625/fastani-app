<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/opensans_regular</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:navigationBarColor">@color/darkBar</item>
        <!--<item name="android:statusBarColor">@color/transparent</item>-->
        <item name="android:statusBarColor">@color/darkBar</item>
        <item name="tabBackground">@color/darkBar</item>
        <item name="android:scrollbarThumbHorizontal">@color/transparent</item>
        <item name="android:scrollbarThumbVertical">@color/transparent</item>
        <item name="colorSurface">@color/darkBar</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <!--<item name="android:windowBackground">@color/background</item>-->

    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="materialThemeOverlay">@style/NavigationView</item>
    </style>

    <style name="NavigationView" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/textColor</item>
    </style>

    <style name="OverlayPrimaryColorBlue">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#007dfe</item>
        <item name="colorOnPrimary">#007dfe</item>
    </style>
</resources>
