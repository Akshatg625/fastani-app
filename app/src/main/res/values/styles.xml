<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/darkBar</item>
        <item name="android:statusBarColor">@color/darkBar</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="tabBackground">@color/darkBar</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="colorSurface">@color/darkBar</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="materialThemeOverlay">@style/NavigationView</item>
    </style>

    <style name="NavigationView" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/textColor</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:solidColor">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
