<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
            android:key="theme"
            android:title="Theme"
            app:isPreferenceVisible="false"
    >
        <SwitchPreferenceCompat
                android:enabled="false"
                app:defaultValue="false"
                android:key="auto_dark_mode"
                app:title="Automatic dark mode"
                android:summary="Based on phone theme"/>
        <SwitchPreferenceCompat
                app:defaultValue="true"
                android:enabled="false"
                android:key="dark_mode"
                app:title="Dark mode"/>
    </PreferenceCategory>
    <PreferenceCategory
            android:key="history"
            android:title="History"
    >
        <SwitchPreference
                android:key="save_history"
                android:title="Save view history"
                app:defaultValue="true"
        >
        </SwitchPreference>
        <Preference
                app:key="clear_history"
                android:title="Clear view history"
        />
    </PreferenceCategory>
    <PreferenceCategory
            android:key="info"
            android:title="Info"
    >
        <Preference
                app:key="version"
                app:title="Version"
                app:summary="@string/version_code"/>
        <SwitchPreference
                app:key="cool_mode"
                android:title="Cool mode"
                app:defaultValue="false"
                app:isPreferenceVisible="false"

        >

        </SwitchPreference>

    </PreferenceCategory>
</PreferenceScreen>